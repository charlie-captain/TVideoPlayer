<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.VideoActivityFullScreen">


    <include layout="@layout/layout_toolbar"/>

    <FrameLayout android:id="@+id/fl_video" android:layout_width="match_parent" android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <com.thatnight.videoplayer.player.TVideoPlayerView android:id="@+id/tvideo_video"
                                                                android:layout_width="match_parent"
                                                                android:layout_height="180dp"
            >
            </com.thatnight.videoplayer.player.TVideoPlayerView>


            <Button android:id="@+id/btn_video_fragment" android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Fragmnet"
            />


            <Button android:id="@+id/btn_video_fragment_v4" android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="Fragmnet_V4"
            />
        </LinearLayout>

    </FrameLayout>


</LinearLayout>